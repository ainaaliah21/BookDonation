@model BookDonorsAPI.Models.Book

@{
    ViewData["Title"] = "Delete Book";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - BookDonorsAPI</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <style>
        body {
            background-color: #fce4ec; /* Light Pink Background */
        }

        .container {
            max-width: 600px;
            margin-top: 50px;
        }

        .form-container {
            background-color: #ffffff;
            padding: 40px;
            border-radius: 15px;
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
        }

        h2 {
            text-align: center;
            color: #d81b60; /* Pink color */
            margin-bottom: 30px;
            font-weight: bold;
        }

        h3 {
            color: #d81b60;
            text-align: center;
            margin-bottom: 30px;
        }

        .row dt {
            font-weight: bold;
            color: #d81b60;
        }

        .row dd {
            font-size: 1.1rem;
            color: #333;
        }

        .btn {
            background-color: #f06292; /* Soft Pink Button */
            color: white;
            font-weight: bold;
            padding: 12px 30px;
            border-radius: 8px;
            width: 100%;
            margin-top: 20px;
        }

        .btn-danger {
            background-color: #e91e63; /* Bright Pink */
            color: white;
        }

            .btn-danger:hover {
                background-color: #d81b60; /* Darker Pink on Hover */
            }

        .cancel-btn {
            background-color: #f8bbd0; /* Light Pink */
            color: black;
            font-weight: bold;
            margin-top: 10px;
        }

            .cancel-btn:hover {
                background-color: #f48fb1; /* Darker Pink */
            }

        .text-center {
            color: #d81b60; /* Pink Color for Text */
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="form-container">
            <h2>Delete Book</h2>

            <h3 class="text-center">Are you sure you want to delete this book?</h3>

            <div>
                <dl class="row">
                    <dt class="col-sm-2">
                        Title
                    </dt>
                    <dd class="col-sm-10">
                        @Model.Tittle
                    </dd>
                    <dt class="col-sm-2">
                        Author
                    </dt>
                    <dd class="col-sm-10">
                        @Model.Author
                    </dd>
                    <dt class="col-sm-2">
                        Genre
                    </dt>
                    <dd class="col-sm-10">
                        @Model.Genre
                    </dd>
                    <dt class="col-sm-2">
                        Year Published
                    </dt>
                    <dd class="col-sm-10">
                        @Model.YearPublished
                    </dd>
                </dl>

                <form asp-action="Delete" method="post">
                    <input type="hidden" asp-for="ID" />
                    <button type="submit" class="btn btn-danger">Delete</button>
                    <a asp-action="Index" class="btn cancel-btn">Cancel</a>
                </form>
            </div>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
</body>
</html>
