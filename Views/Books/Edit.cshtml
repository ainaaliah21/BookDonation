@model BookDonorsAPI.Models.Book

@{
    ViewData["Title"] = "Edit Book";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - BookDonorsAPI</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <style>
        body {
            background-color: #f8e6e0; /* Soft pink background */
        }

        .container {
            max-width: 600px;
            margin-top: 50px;
        }

        .form-container {
            background-color: white;
            padding: 30px;
            border-radius: 15px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
        }

        h2 {
            text-align: center;
            color: #6a1f1f; /* Coral color */
            margin-bottom: 30px;
            font-weight: bold;
        }

        .form-group label {
            font-size: 1.1rem;
            color: #6a1f1f; /* Coral color */
        }

        .form-control {
            border-radius: 8px;
            border: 1px solid #ddd;
            margin-top: 10px;
        }

        .form-control:focus {
            border-color: #FFB6C1; /* Light coral focus */
        }

        .btn {
            background-color: #FFB6C1;
            color: white;
            font-weight: bold;
            padding: 10px 30px;
            border-radius: 8px;
            width: 100%;
            margin-top: 20px;
        }

        .btn:hover {
            background-color: #ff8a96; /* Darker coral on hover */
        }

        .cancel-btn {
            background-color: #ccc;
            color: black;
            font-weight: bold;
            margin-top: 10px;
        }

        .cancel-btn:hover {
            background-color: #999;
        }

        .text-danger {
            font-size: 0.9rem;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="form-container">
            <h2>Edit Book</h2>

            <form asp-action="Edit" method="post">
                <!-- Hidden Field to store Book ID -->
                <input type="hidden" asp-for="ID" />

                <div class="form-group">
                    <label asp-for="Tittle" class="control-label"></label>
                    <input asp-for="Tittle" class="form-control" />
                    <span asp-validation-for="Tittle" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Author" class="control-label"></label>
                    <input asp-for="Author" class="form-control" />
                    <span asp-validation-for="Author" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Genre" class="control-label"></label>
                    <input asp-for="Genre" class="form-control" />
                    <span asp-validation-for="Genre" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="YearPublished" class="control-label"></label>
                    <input asp-for="YearPublished" class="form-control" type="number" />
                    <span asp-validation-for="YearPublished" class="text-danger"></span>
                </div>

                <button type="submit" class="btn">Save</button>
                <a asp-action="Index" class="btn cancel-btn">Cancel</a>
            </form>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
</body>
</html>
